<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TravelNote.DiaryPage" BackgroundImage="bg.png">
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand"
					 HorizontalOptions="FillAndExpand"
					 Orientation="Vertical"
				     Spacing="15">
			
		<StackLayout VerticalOptions="CenterAndExpand"
					 HorizontalOptions="Center"
					Orientation="Vertical">
				
				<Button x:Name="ViewMyJourney" Image="viewjourney.png" Clicked="OnMyJourney" TextColor = "#1654b7" Font="Bold,20"/>
				<Button x:Name="Camera"  Image="camera.png" Clicked="OnCamera" TextColor = "#1654b7" Font="Bold,20"/>
				<Button x:Name="Map"  Image="maps.png" Clicked="OnMaps" TextColor = "#1654b7" Font="Bold,20"/>
				<Button x:Name="Share" Image="share.png"  Clicked="OnShare"  TextColor = "#1654b7" Font="Bold,20"/>
				</StackLayout>
			
			</StackLayout>
		</ContentPage.Content>
</ContentPage>
